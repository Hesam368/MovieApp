@model List<Movie>
@{
    ViewData["Title"] = "Movies";
}
<h3>Movies</h3>
@if (Model.Count == 0)
{
    <p>No Movie has been purchased yet!</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                </tr>

            }
        </tbody>
    </table>
}
<div class="mt-4">
    <a asp-controller="Customers" asp-action="Index">Back to list</a>
</div>
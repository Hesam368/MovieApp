@model Customer
@{
    ViewData["Title"] = "Customer Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-light">
                    <h3>Customer Details</h3>
                </div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" readonly=True />
                    </div>
                    <div class="form-group mb-3">
                            <label asp-for="Birthdate" class="control-label"></label>
                            <input asp-for="Birthdate" class="form-control" type="date" readonly=True />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="MembershipTypeId" class="control-label"></label>
                        <select asp-for="MembershipTypeId" class="form-control" asp-items="ViewBag.MembershipTypes" readonly=True></select>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="IsSubscribedToNewsletter" class="control-label"></label>
                        <input asp-for="IsSubscribedToNewsletter" type="checkbox" readonly=True />
                    </div>
                </div>
            </div>
            <div class="mt-3">
                <a asp-controller="Customers" asp-action="Index">Back to list</a>
            </div>
        </div>
    </div>
</div>
@model Customer
@{
    ViewData["Title"] = "Delete Customer";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-danger text-light">
                    <h4>Are you sure you want to delete this Customer?</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" readonly />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Birthdate" class="control-label"></label>
                            <input asp-for="Birthdate" class="form-control" type="date" readonly />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="MembershipTypeId" class="control-label"></label>
                            <select asp-for="MembershipTypeId" class="form-control" asp-items="ViewBag.MembershipTypes" disabled></select>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="IsSubscribedToNewsletter" class="control-label"></label>
                            <input asp-for="IsSubscribedToNewsletter" type="checkbox" disabled />
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-controller="Customers" asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
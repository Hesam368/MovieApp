@model MovieApp.ViewModels.MovieViewModel
@{
    ViewData["Title"] = "Movie Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-light">
                    <h3>Movie Details</h3>
                </div>
                <div class="card-body">
                    @await Html.PartialAsync("_MovieReadOnly", Model)
                </div>
            </div>
            <div class="mt-3">
                <a asp-controller="Movies" asp-action="Index">Back to list</a>
            </div>
        </div>
    </div>
</div>
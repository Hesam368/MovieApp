@model MovieApp.ViewModels.MovieViewModel
@{
    ViewData["Title"] = "Delete Movie";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-danger text-light">
                    <h4>Are you sure you want to delete this movie?</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        @await Html.PartialAsync("_MovieReadOnly", Model)
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-controller="Movies" asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
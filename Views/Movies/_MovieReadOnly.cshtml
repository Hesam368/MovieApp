@model MovieApp.ViewModels.MovieViewModel

<div class="form-group mb-3">
    <label asp-for="Title" class="control-label"></label>
    <input asp-for="Title" class="form-control" placeholder="Movie Title" readonly/>
</div>
<div class="form-group mb-3">
    <label asp-for="Story" class="control-label"></label>
    <textarea asp-for="Story" class="form-control" readonly></textarea>
</div>
<div class="form-group mb-3">
    <label asp-for="ShortDesc" class="control-label"></label>
    <textarea asp-for="ShortDesc" class="form-control" readonly></textarea>
</div>
<div class="form-group mb-3">
    <label asp-for="ImageUrl" class="control-label"></label>
    <input asp-for="ImageUrl" class="form-control" readonly/>
</div>
<div class="form-group mb-3">
    <label asp-for="UrlHandle" class="control-label"></label>
    <input asp-for="UrlHandle" class="form-control" readonly/>
</div>
<div class="form-group mb-3">
    <label asp-for="PublishedDate" class="control-label"></label>
    <input asp-for="PublishedDate" class="form-control" type="date" readonly/>
</div>
<div class="form-group mb-3">
    <label asp-for="Director" class="control-label"></label>
    <input asp-for="Director" class="form-control" readonly/>
</div>
<div class="form-group mb-3">
    <label asp-for="Visible" class="control-label"></label>
    <input asp-for="Visible" type="checkbox" disabled/>
</div>
<div class="form-group mb-3">
    <label asp-for="AllGenres" class="control-label"></label>
    <select class="form-select" asp-items="@(new SelectList(Model.AllGenres, "Id", "Name"))" asp-for="@Model.SelectedGenreIds" disabled></select>
</div>